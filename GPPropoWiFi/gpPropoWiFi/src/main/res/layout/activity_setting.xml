<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.lipoyang.gppropowifi.SettingActivity">

    <android.support.v7.widget.GridLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:rowCount="4"
        app:columnCount="4"
        android:id="@+id/tableLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                app:layout_row="0"
                app:layout_column="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CH0"
                android:id="@+id/textCH0"
                app:layout_row="0"
                app:layout_column="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CH1"
                android:id="@+id/textCH1"
                app:layout_row="0"
                app:layout_column="2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CH2"
                android:id="@+id/textCH2"
                app:layout_row="0"
                app:layout_column="3" />

            <TextView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="REV"
                android:id="@+id/textRev"
                app:layout_row="1"
                app:layout_column="0" />
            <Switch
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/switchRev0"
                app:layout_row="1"
                app:layout_column="1" />
            <Switch
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/switchRev1"
                app:layout_row="1"
                app:layout_column="2" />
            <Switch
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/switchRev2"
                app:layout_row="1"
                app:layout_column="3" />

            <TextView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TRIM"
                android:id="@+id/textTRIM"
                app:layout_row="2"
                app:layout_column="0" />
            <net.lipoyang.gppropowifi.NumericUpDownView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/viewTrim0"
                app:layout_row="2"
                app:layout_column="1" />
            <net.lipoyang.gppropowifi.NumericUpDownView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/viewTrim1"
                app:layout_row="2"
                app:layout_column="2" />
            <net.lipoyang.gppropowifi.NumericUpDownView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/viewTrim2"
                app:layout_row="2"
                app:layout_column="3" />

            <TextView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GAIN"
                android:id="@+id/textGAIN"
                app:layout_row="3"
                app:layout_column="0" />
            <net.lipoyang.gppropowifi.NumericUpDownView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/viewGain0"
                app:layout_row="3"
                app:layout_column="1" />
            <net.lipoyang.gppropowifi.NumericUpDownView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/viewGain1"
                app:layout_row="3"
                app:layout_column="2" />
            <net.lipoyang.gppropowifi.NumericUpDownView
                app:layout_gravity="center"
                app:layout_columnWeight="1"
                android:id="@+id/viewGain2"
                app:layout_row="3"
                app:layout_column="3" />

    </android.support.v7.widget.GridLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/buttonSave"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="RELOAD"
            android:id="@+id/buttonReload"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4WS MODE"
            android:id="@+id/text4WS"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4WS"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/text4WS" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BATTERY"
            android:id="@+id/textBATTERY"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textVbat" />
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="----V"
            android:id="@+id/textVbat"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
